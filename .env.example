# ============================================
# API Configuration
# ============================================
APP_NAME=Smart Travel Recommendation API
APP_VERSION=1.0.0
DEBUG=false

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=smart_travel

# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# ============================================
# API Security (Optional)
# ============================================
API_KEY=your_secret_api_key_here
ENABLE_API_KEY_AUTH=false

# ============================================
# BERT Model Configuration
# ============================================
BERT_MODEL_NAME=paraphrase-multilingual-mpnet-base-v2
BERT_CACHE_DIR=./cache/bert_embeddings

# ============================================
# Performance Limits
# ============================================
MAX_PLACES_PER_REQUEST=200
REQUEST_TIMEOUT_SECONDS=60

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# Use "*" for development, specify domains for production
CORS_ORIGINS=*

# ============================================

# Distance API Configuration
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=real-time-distance-calculator-with-map.p.rapidapi.com

# Algorithm Parameters
DEFAULT_ALPHA=0.7  # Weight for content-based vs collaborative filtering
DEFAULT_BETA=0.5   # Weight for travel time in greedy algorithm
TOP_K_PLACES=30    # Number of top places to consider
